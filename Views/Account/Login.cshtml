
@{
    Layout = null;
}
@model LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="icon" href="~/img/icon.png">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="body-index">

    <div class="container">
        <div class="row m-0 p-0">

            <div class="row mt-4 p-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a asp-controller="Home" asp-action="Index">
                            <img class="logo" src="~/img/CrashLessUtahWhite.png" />
                        </a>
                    </div>
                    <div>
                        <ul id="index">
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="Search">Accident Search</a></li>
                            <li><a asp-controller="Home" asp-action="Severity">Severity Calculator</a></li>
                            <li><a asp-controller="Home" asp-action="Charts">Analyses</a></li>
                            <li><a href="/admin/new-accident">Report an Accident</a></li>
                            <li><vc:login></vc:login></li>
                        </ul>
                    </div>
                </div>
                <div>
                    <hr class="line-hr line-hr-home" />
                </div>
            </div>

            <div class="row">
                <div class="col-4"></div>
                <div class="col text-body-column shadow-lg p-lg-5">
                    <div class="row mb-3">
                        <div class="col text-center">
                            <h1>Login</h1>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <div asp-validation-summary="All"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form method="post" asp-controller="Account" asp-action="Login">
                                <div class="row mb-3">
                                    <div class="col">
                                        <label asp-for="Username">Username:</label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Username" class="input-group-text" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col">
                                        <label asp-for="Password">Password:</label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Password" type="password" class="input-group-text" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col text-center">
                                        <button type="submit" class="btn btn-lg btn-success">Login</button>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="ReturnUrl" />
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-4"></div>
            </div>

        </div>
    </div>
    <footer class="footer text-center text-body-column">
        <a asp-controller="Home" asp-action="Index">Home</a> |
        <a href="~/privacy_policy.pdf">Privacy</a> |
        Copyright 2022 | INTEX Group 1-6
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>