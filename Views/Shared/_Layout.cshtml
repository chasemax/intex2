<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="icon" href="~/img/icon.png">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="row m-0 p-0">
        <div class="padding-tb">
            <div class="navmain-layout">
                <a asp-controller="Home" asp-action="Index">
                    <img class="logo" src="~/img/CrashLessUtahBlack.png" />
                </a>
            </div>
            <div class="navitems">
                <ul id="menu">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Search">Accident Search</a></li>
                    <li><a asp-controller="Home" asp-action="Severity">Severity Calculator</a></li>
                    <li><vc:login></vc:login></li>
                </ul>
            </div>
        </div>
        <div class="line-div">
            <hr class="line-hr" />
        </div>
    </div>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <footer class="footer bg-white text-center">
        <a asp-controller="Home" asp-action="Index">Home</a> |
        <a href="~/privacy_policy.pdf">Privacy</a> |
        Copyright 2022 | INTEX Group 1-6
    </footer>
</body>
</html>
