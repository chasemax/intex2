@model Accident
@{ 
    ViewData["Title"] = "Accident Details"; 
}

<div class="container w-75">
    <div class="row">
        <div class="col">
            <div class="padding-accident">
                <div class="bg-light p-1">

                    <h2>ACCIDENT #@Model.Crash_ID </h2>
                    <p>
                        <b>Date and Time of Accident:</b> @Model.Crash_DT
                    </p>

                    @if (@Model.Crash_Severity_Id == 1 | @Model.Crash_Severity_Id == 2)
                    {
                        <p class="badge bg-info float-right">
                            Crash Severity: @Model.Crash_Severity_Id
                        </p>
                    }
                    else if (@Model.Crash_Severity_Id == 3 | @Model.Crash_Severity_Id == 4)
                    {
                        <p class="badge bg-warning float-right">
                            Crash Severity: @Model.Crash_Severity_Id
                        </p>
                    }
                    else
                    {
                        <p class="badge bg-danger float-right">
                            Crash Severity: @Model.Crash_Severity_Id
                        </p>
                    }

                    <p class="badge bg-info float-right">
                        Predicted Severity: @ViewBag.predictedSeverity
                    </p>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <p><b>Main Road Name:</b></p>
            <p><b>City:</b></p>
            <p><b>County Name:</b></p>
            <p><b>Route #:</b></p>
            <p><b>Mile Point:</b></p>
            <p><b>Latitude:</b></p>
            <p><b>Longitude:</b></p>
            <br />
            <a class="btn btn-primary" href="/admin/edit-accident/@Model.Crash_ID">Edit Accident Details</a>
        </div>
        <div class="col-5">
            <p>@Model.Main_Road_Name</p>
            <p>@Model.City</p>
            <p>@Model.County_Name</p>
            <p>@Model.Route</p>
            <p>@Model.MilePoint</p>
            <p>@Model.Latitude</p>
            <p>@Model.Longitude</p>
        </div>
        <div class="col-4">
            <img src="@ViewBag.mapsUrl" />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h2>Conditions</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            @if (Model.Work_Zone_Related == true)
            {
                <input type="checkbox" disabled="disabled" checked="checked" class="color-blue" value="Work Zone Related" />
            }
            else
            {
                <input type="checkbox" disabled="disabled" value="Work Zone Related" />
            }

            @if (Model.Pedestrian_Involved == true)
            {
