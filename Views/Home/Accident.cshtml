            }
            else
            {
                <input type="checkbox" disabled="disabled" value="Intersection" />
            }
            @if (Model.Improper_Restraint == true)
            {
                <input type="checkbox" disabled="disabled" checked="checked" class="color-blue" value="Improper Restraint" />
            }
            else
