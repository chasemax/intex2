                <input type="checkbox" disabled="disabled" value="Older Driver Involved" />
            }

            @if (Model.Night_Dark_Condition == true)
            {
                <input type="checkbox" disabled="disabled" checked="checked" class="color-blue" value="Night/Dark Conditions" />
            }
            else
            {
                <input type="checkbox" disabled="disabled" value="Night/Dark Conditions" />
            }
        </div>
        <div class="col-2">
            @if (Model.Distracted_Driving == true)
