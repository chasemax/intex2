@model Accident

<div class="container w-75">
    <div class="row">
        <div class="col">
            <div class="padding-accident">
                <div class="bg-light p-1">

                    @if (@Model.Crash_Severity_Id == 1 | @Model.Crash_Severity_Id == 2)
                    {
                        <p class="badge bg-info float-right">
                            Crash Severity: @Model.Crash_Severity_Id
                        </p>
                    }
                    else if (@Model.Crash_Severity_Id == 3 | @Model.Crash_Severity_Id == 4)
                    {
                        <p class="badge bg-warning float-right">
                            Crash Severity: @Model.Crash_Severity_Id
                        </p>
                    }
                    else
                    {
                        <p class="badge bg-danger float-right">
                            Crash Severity: @Model.Crash_Severity_Id
                        </p>
                    }

                    <p class="badge bg-info float-right">
                        Predicted Severity: @ViewBag.predictedSeverity
                    </p>
                    <h2>ACCIDENT: @Model.Crash_ID </h2>
                    <p>
                        @Model.Crash_DT
                    </p>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table>
                <tr>
                    <th>Main Road:</th>
                    <td>@Model.Main_Road_Name</td>
                </tr>
                <tr>
                    <th>City:</th>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <th>County Name:</th>
                    <td>@Model.County_Name</td>
                </tr>
                <tr>
                    <th>Route:</th>
                    <td>@Model.Route</td>
                </tr>
                <tr>
                    <th>Mile Point:</th>
                    <td>@Model.MilePoint</td>
                </tr>
                <tr>
                    <th>Latitude:</th>
                    <td>@Model.Latitude</td>
                </tr>
                <tr>
                    <th>Longitude:</th>
                    <td>@Model.Longitude</td>
                </tr>
            </table>
            <a class="btn btn-primary" href="/admin/edit-accident/@Model.Crash_ID">Edit Accident Details</a>
        </div>
        <div class="col">
            <img src="@ViewBag.mapsUrl" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="padding-conditions">
                <h2>Conditions</h2>

                <span>Work Zone Related</span> @Html.CheckBox("Work_Zone_Related", Model.Work_Zone_Related)
                <span>Pedestrian Involved</span> @Html.CheckBox("Pedestrian", Model.Pedestrian_Involved)
                <span>Bicyclist Involved</span> @Html.CheckBox("Bicyclist_Involved", Model.Bicyclist_Involved)
                <span>Motorcycle Involved</span> @Html.CheckBox("Motorcycle_Involved", Model.Motorcycle_Involved)
                <span>Improper Restraint</span> @Html.CheckBox("Improper_Restraint", Model.Improper_Restraint)
                <span>Unrestrained</span> @Html.CheckBox("Unrestrained", Model.Unrestrained)
                <span>DUI</span> @Html.CheckBox("DUI", Model.DUI)
                <span>Intersection_Related</span> @Html.CheckBox("Intersection_Related", Model.Intersection_Related)
                <span>Wild Animal Related</span> @Html.CheckBox("Wild_Animal_Related", Model.Wild_Animal_Related)
                <span>Domestic Animal Related</span> @Html.CheckBox("Domestic_Animal_Related", Model.Domestic_Animal_Related)
                <span>Overturn Rollover</span> @Html.CheckBox("Overturn_Rollover", Model.Overturn_Rollover)
                <span>Commercial Motor Vehicle Involved</span> @Html.CheckBox("Commercial_Motor_Veh_Involved", Model.Commercial_Motor_Veh_Involved)
                <span>Teenage Driver Involved</span> @Html.CheckBox("Teenage_Driver_Involved", Model.Teenage_Driver_Involved)
                <span>Older Driver Involved</span> @Html.CheckBox("Older_Driver_Involved", Model.Older_Driver_Involved)
                <span>Night Dark Condition</span> @Html.CheckBox("Night_Dark_Condition", Model.Night_Dark_Condition)
                <span>Single Vehicle</span> @Html.CheckBox("Single_Vehicle", Model.Single_Vehicle)
                <span>Distracted Driving</span> @Html.CheckBox("Distracted_Driving", Model.Distracted_Driving)
                <span>Drowsy Driving</span> @Html.CheckBox("Drowsy_Driving", Model.Drowsy_Driving)
                <span>Roadway Departure</span> @Html.CheckBox("Roadway_Departure", Model.Roadway_Departure)

            </div>
        </div>
    </div>
</div>




