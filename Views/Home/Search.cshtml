        <div class="row bg-secondary">
            <div class="col-1">Crash ID</div>
            <div class="col-4">Main Road Name</div>
            <div class="col-2">City</div>
            <div class="col-2">County</div>
            <div class="col-2">Crash Date and Time</div>
            <div class="col-1">Severity (1-5)</div>
        </div>

            @foreach (var a in Model.Accidents)
            {
                <a asp-controller="Home" asp-action="Accident" asp-route-id="@a.Crash_ID">
                    <div class="row body-row">
                        <div class="col-1 body-data">@a.Crash_ID</div>
                        <div class="col-4 body-data">@a.Main_Road_Name</div>
                        <div class="col-2 body-data">@a.City</div>
                        <div class="col-2 body-data">@a.County_Name</div>
                        <div class="col-2 body-data">@a.Crash_DT</div>
                        <div class="col-1 body-data">@a.Crash_Severity_Id</div>
                    </div>
                </a>
            }

            <div page-model="@Model.PageInfo" page-action="Search" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-dark"
