@model AccidentsViewModel

<div class="container-fluid">
    <div class="row m-0 p-0">
        <div class="col-3 m-0 p-0 filter-col">
            <h2>Filtering</h2>
            <div class="filter-table-div">
                <table class="filter-table-table">
                    <thead class="filter-table-thead">
                        <tr class="filter-table-trthead">
                            <th class="filter-table-th">County</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in ViewBag.County)
                        {
                            <tr class="filter-table-trtbody">
                                <td class="filter-table-th"><a asp-controller="Home" asp-action="Search" asp-route-county="@c">@c</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <br />

            <div class="filter-table-div">
                <table class="filter-table-table">
                    <thead class="filter-table-thead">
                        <tr class="filter-table-trthead">
                            <th class="filter-table-th">City</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in ViewBag.City)
                        {
                            <tr class="filter-table-trtbody">
                                <td class="filter-table-th"><a asp-controller="Home" asp-action="Search" asp-route-city="@c">@c</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
