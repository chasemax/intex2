                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.PageInfo.CityFilterQueries)
                    {
                        <tr class="filter-table-trtbody">
                            <td class="filter-table-th @(c.Key == Model.PageInfo.SelectedCity ? "bg-primary" : "")"><a asp-controller="Home" asp-action="Search" asp-all-route-data="@c.Value">@c.Key</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <br />

        <div class="filter-table-div">
            <table class="filter-table-table">
                <thead class="filter-table-thead">
                    <tr class="filter-table-trthead">
                        <th class="filter-table-th">Severity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.PageInfo.SeverityFilterQueries)
                    {
                        <tr class="filter-table-trtbody">
                            <td class="filter-table-th @(c.Key == Model.PageInfo.SelectedSeverity ? "bg-primary" : "")"><a asp-controller="Home" asp-action="Search" asp-all-route-data="@c.Value">@c.Key</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-controller="Home" asp-action="Search" class="btn btn-lg btn-outline-primary align-self-center mt-3">Clear Filters</a>
    </div>
